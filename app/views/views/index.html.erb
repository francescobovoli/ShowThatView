<h1>Listing views</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Floor</th>
      <th>Direction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @views.each do |view| %>
      <tr>
        <td><%= view.address %></td>
        <td><%= view.floor %></td>
        <td><%= view.direction %></td>
        <td><%= link_to 'Show', view %></td>
        <td><%= link_to 'Edit', edit_view_path(view) %></td>
        <td><%= link_to 'Destroy', view, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New View', new_view_path %>
