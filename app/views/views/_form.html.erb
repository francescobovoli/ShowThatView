  <div class="field form-group">
    <%= f.label :direction, class: 'col-sm-2 control-label' %><br>
    <%= f.text_field :direction, :value => "0", class: 'form-control' %>
  </div>
  -->
  <div class="actions form-group">
    <div class="col-sm-2">
      <%= submit_tag 'Show!' , :onclick => "updateView()"%>
    </div>
  </div>

  <div class="field form-group">
    <br>
    <br>
    <%= link_to 'OR: show me some examples..', views_path %>
  </div>

<% end %>
