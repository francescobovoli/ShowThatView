<%= form_for(@view, remote: true) do |f| %>
  <% if @view.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@view.errors.count, "error") %> prohibited this view from being saved:</h2>

      <ul>
      <% @view.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :address, class: 'col-sm-2 control-label' %><br>
    <%= f.text_field :address, :value => "Eiffel tower, Paris", class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :floor, class: 'col-sm-2 control-label' %><br>
    <%= f.text_field :floor, :value => "100", class: 'form-control' %>
  </div>
